/* ------------------------------------------------------------ *\
|* ------------------------------------------------------------ *|
|* Nav bar, search, and nav
|* ------------------------------------------------------------ *|
\* ------------------------------------------------------------ */
#navigation-bar {
    position: relative;
    height: 60px;
    padding-left: 60px;
}
#search {
   position: relative;
float: right;
width: 60px;
height: 60px;
margin-left: -60px;
right: 80px;
left: 29%;
top: 28px;
}
#label {
    width: 60px;
    height: 60px;
    position: relative;
    z-index: 20;
}
#label label {
    display: block;
width: 26px;
height: 30px;
background: url(../images/search.svg) no-repeat;
font-size: 0;
color: rgba(0, 0, 0, 0);
text-indent: -9999px;
cursor: pointer;
margin-top: 10px;
margin-left: 15px;
}
#label label:hover {
}


#label.active label {

}
#input {
  position: absolute;
top: 51px;
right: 19px;
width: 580px;
height: 42px;
z-index: 5;
overflow: hidden;
	
	
}
#input input {
    display: block;
    position: absolute;
    top: 0;
   left: -580px;
width: 580px;
    height: 100%;
    margin: 0;
    padding: 0 10px;
    background-color: #2c3880;
    color: #fff;
	border:1px solid #2c3880;
	border-radius:5px!important;
	font-size: 14px;
   
}
#input input:focus {
    outline: none
}
#input.focus {
    z-index: 20
}
#input.focus input {
    left: 0;
    -webkit-transition: left 0.3s;
    -moz-transition: left 0.3s;
    -ms-transition: left 0.3s;
    -o-transition: left 0.3s;
    transition: left 0.3s;
}
